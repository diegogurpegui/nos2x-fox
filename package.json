{
  "name": "nos2x-fox",
  "description": "Nostr Signer Extension (for Firefox)",
  "version": "1.6.0",
  "scripts": {
    "build": "./build.js prod",
    "watch": "ag -l --js | entr ./build.js",
    "sources": "rm -f extension/*.build.*; zip -r sources . -i extension build.js README.md",
    "package": "./build.js prod; cd dist; zip -r archive *; cd ..; mv dist/archive.zip ./nos2x-fox.zip"
  },
  "dependencies": {
    "events": "^3.3.0",
    "nostr-tools": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "esbuild": "^0.16.15",
    "esbuild-plugin-copy": "^2.0.1",
    "esbuild-plugin-svgr": "^1.0.1",
    "esbuild-sass-plugin": "^2.4.5",
    "eslint": "^8.6.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.28.0",
    "prettier": "^2.5.1"
  }
}
